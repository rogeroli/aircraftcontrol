@model AircraftControlProject.Models.Aircraft

@{
    ViewBag.Title = "Aeronave";
}

<h2>Visualizar</h2>

<div>
    <h4>Aeronave</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Código</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AircraftModel.CODE)
        </dd>

        <dt>
            <label>Prefixo</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PREFIX)
        </dd>

        <dt>
            <label>Peso máximo de partida</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MAX_DEPARTURE_WEIGHT)
        </dd>

        <dt>
            <label>Peso máximo de pouso</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MAX_LANDING_WEIGHT)
        </dd>

        <dt>
            <label>Ativo</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ACTIVE)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.AIRCRAFT_ID }) |
    @Html.ActionLink("Listar Aeronaves", "Index")
</p>
