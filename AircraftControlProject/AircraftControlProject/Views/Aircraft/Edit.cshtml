@model AircraftControlProject.Models.Aircraft

@{
    ViewBag.Title = "Editar Aeronave";
}

<h2>Aeronave</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Editar</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AIRCRAFT_ID)

        <div class="form-group">
            <label class="control-label col-md-5">Prefixo</label>
            <div class="col-md-14">
                @Html.EditorFor(model => model.PREFIX, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PREFIX, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-5">Modelo</label>
            <div class="col-md-14">
                @Html.DropDownList("AIRCRAFT_MODEL_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AIRCRAFT_MODEL_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-5">Peso máximo de partida</label>
            <div class="col-md-14">
                @Html.EditorFor(model => model.MAX_DEPARTURE_WEIGHT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MAX_DEPARTURE_WEIGHT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-5">Peso máximo de pouso</label>
            <div class="col-md-14">
                @Html.EditorFor(model => model.MAX_LANDING_WEIGHT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MAX_LANDING_WEIGHT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-5">Ativo</label>
            <div class="col-md-5">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ACTIVE)
                    @Html.ValidationMessageFor(model => model.ACTIVE, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

       <div class="form-group">
            <div class="col-md-offset-5 col-md-5">
                <input type="submit" value="Alterar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listar Aeronaves", "Index", null, new { @class = "btn btn-default btn-sm" })
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
